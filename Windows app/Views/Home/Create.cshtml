@model Windows_app.ViewModels.Employee; 
@{
    ViewData["Title"] = "Create";
}
<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/lib/Jquery/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.js"></script>
<div class="container">
    <div asp-validation-summary="All"></div>
    <form asp-controller="Home" asp-action="Create" method="post">
        @Html.HiddenFor(x=>x.EmployeeID)
        <div class="form-group">
            <label asp-for="FirstName" class="col-form-label col-md-2">First Name</label>
            <div class="col-md-10">
                <input asp-for="FirstName" placeholder="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row  list-group-horizontal">
            <label asp-for="LastName" class="col-form-label col-md-2">Last Name</label>
            <div class="col-md-10">
                <input asp-for="LastName" placeholder="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row  list-group-horizontal">
            <label asp-for="Email" class="col-md-2">Email</label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row  list-group-horizontal">
            <label asp-for="Department" class="col-form-label col-md-2">Department</label>
            <div class="col-md-10">
                <select asp-for="Department" class="form-control"
                            asp-items="Html.GetEnumSelectList<Windows_app.ViewModels.Department>()">
                        <option value="">Please Select</option>
                    </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row offset-5 col-md-2">
            <input type="submit" value="Submit" />
        </div>

    </form>
</div>

